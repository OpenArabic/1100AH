# و " والثبت "، " الصحيح الحديث " أقواها في التوثيق.
# وألفاظ الجرح والذم: " ضعيف "، " كذوب "، " وضاع "، " كذاب "، " غال "، "
~~عامي "، " واه "، " لا شئ "، " متهم "، " مجهول "، " مضطرب الحديث "، "
